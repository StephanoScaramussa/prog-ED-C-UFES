{
	"name": "Ambiente C (Novo)",

	// Informa ao VS Code para usar o Dockerfile que está nesta mesma pasta.
	"build": {
		// Define o "contexto" da construção como a pasta raiz do projeto (a pasta acima desta).
		"context": "..",
		// Agora, especifica o caminho para o Dockerfile A PARTIR do contexto acima.
		"dockerfile": ".devcontainer/Dockerfile"
	},

	// Mapeia a pasta do seu projeto para dentro do contêiner.
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/workspace,type=bind",
	"workspaceFolder": "/home/vscode/workspace",

	// Define as configurações a serem aplicadas dentro do VS Code no contêiner.
	"customizations": {
		"vscode": {
			// Extensões a serem instaladas no contêiner.
			"extensions": [
				"eamodio.gitlens",
				"pkief.material-icon-theme",
				"akamud.vscode-theme-onedark-pro"
			],
			// Configurações do editor.
			"settings": {
				"terminal.integrated.shell.linux": "/bin/bash"
			}
		}
	},

	// Informa ao VS Code para correr os comandos como o utilizador 'vscode'.
	"remoteUser": "vscode"
}

