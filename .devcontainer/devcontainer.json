{
    "name": "C Development Container",
    // Configura o VS Code para usar o Dockerfile que está na raiz do projeto.
    "build": {
        "dockerfile": "../Dockerfile"
    },
    // Define o usuário padrão dentro do container.
    "remoteUser": "vscode",
    // Lista de extensões do VS Code para instalar automaticamente no container.
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "pkief.material-icon-theme",
                "akamud.vscode-theme-onedark-pro"
            ]
        }
    },
    // Mapeia a pasta do projeto para o diretório de trabalho dentro do container.
    "workspaceFolder": "/home/vscode/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/workspace,type=bind,consistency=cached"
}
