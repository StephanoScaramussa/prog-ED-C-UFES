{
	"name": "C Development Environment",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"forwardPorts": [8080, 3000],
	"remoteEnv": {
		"DISPLAY": "${localEnv:DISPLAY}",
		"XAUTHORITY": "${localEnv:XAUTHORITY}"
	},
	"mounts": [
		"source=${localEnv:XAUTHORITY},target=/root/.Xauthority,readonly",
		"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens",
				"pkief.material-icon-theme",
				"akamud.vscode-theme-onedark-pro",
				"ms-vscode.cpptools-extension-pack"
			]
		}
	},
	// Define o utilizador com que o VS Code irá correr dentro do contêiner
	"remoteUser": "vscode"
}
